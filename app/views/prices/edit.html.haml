= render "render/header"

.price
  .price__title 
    最安値登録
  .price__box
    .price__center
      = form_with model: [@group, @price], local: true do |f|
        .price__name
          = f.label :品名
        .price__text
          = f.text_field :name, placeholder: "登録したい品名", class: "price__field"
        .price__name
          = f.label :値段（税込み）
        .price__text
          = f.text_field :number, placeholder: "半角英数字", class: "price__field"
          %span 円
        = f.submit "更新", class: "price__button"
  .memo__link
    = link_to "削除", group_price_path(@group.id, @price.id), method: :delete, class: "price__red"


        