.MessageId{data: {message: {id: message.id}}}
  .body__main
    .body__chat
      .body__name
        = message.user.name
      .body__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .body__message
      - if message.content.present?
        .body__text
          = message.content
      - if message.image.present?
        .body__picture
          = image_tag message.image.url
