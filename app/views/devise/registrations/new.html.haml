.login
  .login__name
    .login__title Almemory
  .login__register
    .login__new= render "devise/shared/links"
    .login__submit
      .login__sign 新規登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .login__font
          = f.label :名前
          .login__box
            = f.text_field :name, autofocus: true, class: "login__field"
        .login__font
          = f.label :email
          .login__box
            = f.email_field :email, class: "login__field"
        .login__font
          = f.label :password
          (英数字8文字以上)
          .login__box
            = f.password_field :password, autocomplete: "off", class: "login__field"
        .login__font
          = f.label :password_confirmation
          .login__box
            = f.password_field :password_confirmation, autocomplete: "off", class: "login__field"
        .login__box
          = f.submit "Go!", class: "login__send"